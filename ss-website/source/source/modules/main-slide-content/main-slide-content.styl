.main-slide-content
	color: white
	width: 370px;
	padding: 0 20px 0 20px;
	position: absolute;
	bottom: 20%;
	right: 0;
	+below($media-screen-xs)
		position relative
		bottom auto
		width auto
		padding 20px
	+hd(anti-overlap: true)
		bottom: 40%;
		width: 60%;


	&__title
		font-size: 22px;
		padding: 0 0 20px 0;
		margin: 0 0 0 0;
		color: white
		+hd(anti-overlap: true)
			font-size: 28px;

	&__text
		font-size: 16px;
		line-height: 25px;
		padding: 0 0 25px 0;
		margin: 0 0 0 0;
		+hd(anti-overlap: true)
			font-size: 20px;

	&__button
		text-align: center;
		margin: 0 0 25px 0;

.memory-block
	background-color rgba(255, 255, 255, 0.5)
	font-size: 13px;
	padding: 10px 15px;
	position: relative;
	border-radius 5px
	margin-bottom 16px
	& .fa
		font-size 40px
		float left
		color #fff
		margin 5px 15px 0 0;
	&:after
		content ""
		position absolute
		border-color: transparent;
		border-style: dashed dashed solid;
		border-width: 8.5px 8.5px;
		right: 95px;
		bottom: -16px;
		z-index: 1;
		height: 0;
		width: 0;
		border-top-color: #ccc;
		border-top-color: rgba(255, 255, 255, 0.5);
	& a
		color: #fff;

	&__link
		position: absolute;
		display: block;
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;

.memory-down
	float right